<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Botones" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">#872389</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.Botones.ColorOperaciones" parent="AppTheme.Botones">
        <item name="android:background">#433232</item>
    </style>

    <style name="AppTheme.Botones.ColorNumeros"  parent="AppTheme.Botones">
        <item name="android:background">#a30303</item>
    </style>


</resources>
